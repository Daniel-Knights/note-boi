{
  "name": "note-boi",
  "version": "2.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Daniel-Knights/note-boi"
  },
  "type": "module",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vite build",
    "vite:preview": "vite preview",
    "dev": "tauri dev",
    "build": "pnpm run checks && tauri build",
    "build:debug": "tauri build --debug",
    "icon": "tauri icon ./artwork/icon.png",
    "info": "tauri info",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:update": "vitest run -u",
    "lint": "eslint && vue-tsc --noEmit && tsc --noEmit",
    "checks": "pnpm run lint && pnpm run test",
    "format": "prettier --write ./src",
    "release:patch": "tsx ./scripts/release.ts patch",
    "release:minor": "tsx ./scripts/release.ts minor",
    "release:major": "tsx ./scripts/release.ts major"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/plugin-dialog": "~2",
    "@tauri-apps/plugin-log": "~2",
    "@tauri-apps/plugin-process": "~2",
    "@tauri-apps/plugin-shell": "~2",
    "@tauri-apps/plugin-updater": "~2",
    "quill": "^2.0.3",
    "vue": "^3.5.16"
  },
  "devDependencies": {
    "@babel/types": "^7.27.6",
    "@eslint/js": "^9.28.0",
    "@tauri-apps/cli": "^2.5.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.15.30",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "2.4.6",
    "changenog": "^2.0.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-vue": "^10.2.0",
    "fake-indexeddb": "^6.0.1",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "quill-delta": "^5.1.0",
    "sass-embedded": "1.89.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^6.3.5",
    "vitest": "3.2.2",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.10"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.11.1"
}
