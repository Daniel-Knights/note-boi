{
  "name": "note-boi",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Daniel-Knights/note-boi"
  },
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "pnpm run lint && vite build",
    "vite:preview": "vite preview",
    "dev": "tauri dev",
    "build": "pnpm run test:build && tauri build",
    "icon": "pnpx @tauri-apps/tauricon ./artwork/icon.png",
    "info": "tauri info",
    "test": "vitest",
    "test:build": "vitest run",
    "lint": "eslint ./**/*.{ts,js,mjs,vue} --no-error-on-unmatched-pattern && vue-tsc --noEmit",
    "checks": "pnpm run lint && pnpm run test:build",
    "format": "prettier --write ./src",
    "update": "node ./scripts/updater.mjs",
    "release:patch": "pnpm run lint && pnpm run test:build && pnpm version patch && git push && git push --tags",
    "release:minor": "pnpm run lint && pnpm run test:build && pnpm version minor && git push && git push --tags",
    "release:major": "pnpm run lint && pnpm run test:build && pnpm version major && git push && git push --tags",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.4.0",
    "quill": "^1.3.7",
    "uuid": "^9.0.0",
    "vue": "3.3.4"
  },
  "devDependencies": {
    "@actions/github": "^5.1.1",
    "@babel/types": "^7.22.5",
    "@tauri-apps/cli": "^1.4.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/node": "^20.4.2",
    "@types/quill": "^2.0.10",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "2.4.1",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.15.1",
    "jsdom": "^22.1.0",
    "node-fetch": "^3.3.1",
    "prettier": "^3.0.0",
    "quill-delta": "^5.1.0",
    "sass": "^1.64.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.6",
    "vitest": "^0.33.0",
    "vue-eslint-parser": "^9.3.1",
    "vue-tsc": "^1.8.5"
  }
}
